{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ES2022"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "api",
    "baseUrl": ".",
    "paths": {
      "@/*": ["api/*"]
    },
    "types": ["node"]
  },
  "include": ["api/**/*.ts", "api/**/*.tsx", "api/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}